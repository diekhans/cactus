import os
from cgtscons import *

# clone to avoid modifying parent enviroment
Import("env",)
env = env.Clone()

libAddCactus(env)
libAddSonLib(env)

##
# cactusLib
##
clPublicIncludeDirs = ("api/include",)
clEnv = env.Clone()
installIncludes(clEnv, globInclude(clEnv, clPublicIncludeDirs))
buildStaticLibrary(clEnv, CACTUS_LIB_NAME, 
                   globSrcPaths(clEnv, "api/src", "*.c"))

##
# bar
##
linkProg(env, "cactus_bar", Glob("bar/src/*.c"))


